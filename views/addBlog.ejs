<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Create Story</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #f6f9fc 0%, #edf2f7 100%);
      }

      .form-container {
        max-width: 550px;
        margin: 1.5rem auto;
        padding: 1.25rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      }

      .header {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        margin: -1.25rem -1.25rem 1rem;
        padding: 1rem;
        border-radius: 16px 16px 0 0;
        color: white;
        text-align: center;
      }

      .page-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
      }

      .form-group {
        margin-bottom: 1rem;
        position: relative;
      }

      .form-label {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-weight: 500;
        color: #4b5563;
        margin-bottom: 0.3rem;
        font-size: 0.9rem;
      }

      .form-label i {
        color: #6366f1;
        font-size: 0.8rem;
      }

      .form-control {
        width: 100%;
        padding: 0.5rem 0.75rem;
        border: 1.5px solid #e5e7eb;
        border-radius: 8px;
        font-size: 0.9rem;
        transition: all 0.2s ease;
      }

      .form-control:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        outline: none;
      }

      textarea.form-control {
        min-height: 100px;
        max-height: 200px;
        resize: vertical;
      }

      .upload-zone {
        border: 1.5px dashed #e5e7eb;
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        position: relative;
        transition: all 0.2s ease;
      }

      .upload-zone:hover {
        border-color: #6366f1;
        background: #f8fafc;
      }

      .upload-icon {
        color: #6366f1;
        font-size: 1.5rem;
        margin-bottom: 0.3rem;
      }

      .upload-text {
        font-size: 0.8rem;
        color: #6b7280;
      }

      input[type="file"] {
        position: absolute;
        inset: 0;
        opacity: 0;
        cursor: pointer;
      }

      .preview-box {
        margin-top: 0.5rem;
        display: none;
        position: relative;
      }

      .preview-image {
        width: 100%;
        height: 120px;
        object-fit: cover;
        border-radius: 8px;
      }

      .remove-btn {
        position: absolute;
        top: 0.25rem;
        right: 0.25rem;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        font-size: 0.8rem;
        cursor: pointer;
      }

      .submit-btn {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
        width: 100%;
        padding: 0.6rem;
        border: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .submit-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
      }

      .tips {
        margin-top: 0.75rem;
        padding: 0.75rem;
        background: #f8fafc;
        border-radius: 8px;
        font-size: 0.8rem;
      }

      .tips i {
        color: #f59e0b;
      }

      .tips-list {
        margin: 0.3rem 0 0;
        padding-left: 1.5rem;
        color: #4b5563;
      }

      .char-count {
        position: absolute;
        right: 0.5rem;
        top: 0.3rem;
        font-size: 0.7rem;
        color: #9ca3af;
      }

      @media (max-width: 640px) {
        .form-container {
          margin: 0.75rem;
          border-radius: 12px;
        }
      }

      /* mobile and tab view */
      /* Base styles remain the same */

/* Tablet Styles (768px - 1024px) */
@media (max-width: 1024px) {
  .form-container {
    max-width: 700px;
    margin: 2rem auto;
    padding: 1.5rem;
  }

  .header {
    margin: -1.5rem -1.5rem 1.5rem;
    padding: 1.25rem;
  }

  .page-title {
    font-size: 1.4rem;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-label {
    font-size: 1rem;
  }

  .form-control {
    padding: 0.75rem 1rem;
    font-size: 1rem;
  }

  textarea.form-control {
    min-height: 150px;
  }

  .upload-zone {
    padding: 1.5rem;
  }

  .upload-icon {
    font-size: 1.75rem;
  }

  .upload-text {
    font-size: 0.9rem;
  }

  .preview-image {
    height: 180px;
  }

  .submit-btn {
    padding: 0.75rem;
    font-size: 1rem;
  }
}

/* Mobile Styles (up to 767px) */
@media (max-width: 767px) {
  .form-container {
    max-width: 100%;
    margin: 1rem;
    padding: 1rem;
    border-radius: 12px;
  }

  .header {
    margin: -1rem -1rem 1rem;
    padding: 1rem;
    border-radius: 12px 12px 0 0;
  }

  .page-title {
    font-size: 1.2rem;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-label {
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
  }

  .form-control {
    padding: 0.6rem 0.75rem;
    font-size: 0.95rem;
  }

  textarea.form-control {
    min-height: 120px;
  }

  .upload-zone {
    padding: 1.25rem;
  }

  .upload-icon {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .upload-text {
    font-size: 0.85rem;
  }

  .preview-image {
    height: 150px;
  }

  .remove-btn {
    width: 28px;
    height: 28px;
    font-size: 0.9rem;
  }

  .submit-btn {
    padding: 0.7rem;
    font-size: 0.95rem;
  }

  .tips {
    margin-top: 1rem;
    padding: 0.75rem;
  }

  .tips-list {
    font-size: 0.8rem;
    padding-left: 1.25rem;
  }

  .char-count {
    top: 0.25rem;
    font-size: 0.75rem;
  }
}

/* Small Mobile Styles (up to 480px) */
@media (max-width: 480px) {
  .form-container {
    margin: 0.5rem;
    padding: 0.75rem;
  }

  .header {
    margin: -0.75rem -0.75rem 0.75rem;
    padding: 0.75rem;
  }

  .page-title {
    font-size: 1.1rem;
  }

  .form-control {
    padding: 0.5rem 0.625rem;
    font-size: 0.9rem;
  }

  textarea.form-control {
    min-height: 100px;
  }

  .upload-zone {
    padding: 1rem;
  }

  .upload-icon {
    font-size: 1.25rem;
  }

  .upload-text {
    font-size: 0.8rem;
  }

  .preview-image {
    height: 120px;
  }

  .tips {
    padding: 0.625rem;
  }

  .tips-list {
    font-size: 0.75rem;
    padding-left: 1rem;
    margin-top: 0.25rem;
  }

  .submit-btn {
    padding: 0.625rem;
    font-size: 0.9rem;
  }
}
      /* mobile and tab view */
    </style>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="form-container">
      <div class="header">
        <h1 class="page-title">âœ¨ Create Your Story</h1>
      </div>

      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label class="form-label">
            <i class="fas fa-heading"></i>
            Title
          </label>
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="Your story title"
            maxlength="60"
            required
          />
          <span class="char-count"><span id="titleCount">0</span>/60</span>
        </div>

        <div class="form-group">
          <label class="form-label">
            <i class="fas fa-pen"></i>
            Content
          </label>
          <textarea
            class="form-control"
            name="body"
            placeholder="Share your thoughts..."
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label class="form-label">
            <i class="fas fa-image"></i>
            Cover Image
          </label>
          <div class="upload-zone">
            <i class="fas fa-cloud-upload-alt upload-icon"></i>
            <div class="upload-text">Drop image or click to upload</div>
            <input type="file" name="coverImage" accept="image/*" required />
          </div>
          <div class="preview-box" id="previewBox">
            <img id="preview" class="preview-image" alt="Preview" />
            <button type="button" class="remove-btn" id="removeBtn">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>

        <button type="submit" class="submit-btn">
          <i class="fas fa-paper-plane"></i>
          Publish Story
        </button>

        <div class="tips">
          <i class="fas fa-lightbulb"></i>
          Quick Tips:
          <ul class="tips-list">
            <li>Use a clear, engaging title</li>
            <li>Add an image that fits your story</li>
            <li>Preview before publishing</li>
          </ul>
        </div>
      </form>
    </div>

    <script>
      // Character counter
      document
        .querySelector('input[name="title"]')
        .addEventListener("input", function () {
          document.getElementById("titleCount").textContent = this.value.length;
        });

      // Image preview
      const fileInput = document.querySelector('input[type="file"]');
      const preview = document.getElementById("preview");
      const previewBox = document.getElementById("previewBox");
      const removeBtn = document.getElementById("removeBtn");

      fileInput.addEventListener("change", function (e) {
        if (this.files[0]) {
          preview.src = URL.createObjectURL(this.files[0]);
          previewBox.style.display = "block";
        }
      });

      removeBtn.addEventListener("click", function () {
        fileInput.value = "";
        previewBox.style.display = "none";
      });
    </script>
  </body>
</html>
