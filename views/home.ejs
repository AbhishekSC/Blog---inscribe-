<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Home | Inscribe+</title>
    <meta
      name="description"
      content="Discover interesting blog posts on Inscribe+"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: #fafafa;
        color: #333;
      }

      .container {
        max-width: 1140px;
        margin: 2rem auto;
        padding: 0 1rem;
      }

      .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s;
      }

      .card:hover {
        transform: translateY(-4px);
      }

      .card-img-top {
        height: 200px;
        object-fit: cover;
        border-radius: 12px 12px 0 0;
      }

      .card-body {
        padding: 1.25rem;
      }

      .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      .card-text {
        color: #666;
        margin: 0.75rem 0;
      }

      .btn-primary {
        background: #2563eb;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 6px;
      }

      .text-muted {
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <main class="container mt-3 mb-5">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <article class="card h-100">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="<%= blog.title %>"
              loading="lazy"
              height="240px"
            />
            <div class="card-body">
              <h2 class="card-title h5"><%= blog.title %></h2>
              <span class="text-muted">
                <%= new Date(blog.createdAt).toLocaleDateString('en-US', {
                month: 'short', day: 'numeric', year: 'numeric' }) %>
              </span>
              <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
              <a
                href="/blog/<%= blog._id %>"
                class="btn btn-primary stretched-link"
                >Read More</a
              >
            </div>
          </article>
        </div>
        <% }) %>
      </div>
    </main>

    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
